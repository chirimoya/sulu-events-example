<?xml version="1.0" ?>
<list xmlns="http://schemas.sulu.io/list-builder/list">
    <key>events</key>

    <joins name="changer">
        <join>
            <entity-name>%sulu.model.user.class%_changer</entity-name>
            <field-name>App\Model\Event\Event.changer</field-name>
        </join>
        <join>
            <entity-name>%sulu.model.contact.class%_changer</entity-name>
            <field-name>%sulu.model.user.class%_changer.contact</field-name>
        </join>
    </joins>

    <joins name="creator">
        <join>
            <entity-name>%sulu.model.user.class%_creator</entity-name>
            <field-name>App\Model\Event\Event.creator</field-name>
        </join>
        <join>
            <entity-name>%sulu.model.contact.class%_creator</entity-name>
            <field-name>%sulu.model.user.class%_creator.contact</field-name>
        </join>
    </joins>

    <properties>

        <property name="id" translation="app.id">
            <field-name>id</field-name>
            <entity-name>App\Model\Event\Event</entity-name>
        </property>

        <property name="title" visibility="always" translation="app.title" searchability="yes">
            <field-name>title</field-name>
            <entity-name>App\Model\Event\Event</entity-name>
        </property>

        <property name="date" visibility="yes" translation="app.date" type="date">
            <field-name>date</field-name>
            <entity-name>App\Model\Event\Event</entity-name>
        </property>

        <property name="created" translation="app.created" type="datetime" visibility="yes">
            <field-name>created</field-name>
            <entity-name>App\Model\Event\Event</entity-name>
        </property>

        <concatenation-property name="creator" translation="app.creator" visibility="yes" searchability="yes">
            <field>
                <field-name>firstName</field-name>
                <entity-name>%sulu.model.contact.class%_creator</entity-name>

                <joins ref="creator"/>
            </field>
            <field>
                <field-name>lastName</field-name>
                <entity-name>%sulu.model.contact.class%_creator</entity-name>

                <joins ref="creator"/>
            </field>
        </concatenation-property>

        <property name="changed" translation="app.changed" type="datetime" visibility="yes">
            <field-name>changed</field-name>
            <entity-name>App\Model\Event\Event</entity-name>
        </property>

        <concatenation-property name="changer" translation="app.changer" visibility="yes" searchability="yes">
            <field>
                <field-name>firstName</field-name>
                <entity-name>%sulu.model.contact.class%_changer</entity-name>

                <joins ref="changer"/>
            </field>
            <field>
                <field-name>lastName</field-name>
                <entity-name>%sulu.model.contact.class%_changer</entity-name>

                <joins ref="changer"/>
            </field>
        </concatenation-property>

    </properties>
</list>
